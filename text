const reservationButton = document.querySelector('.option-btn-primary');
const ouiButton = document.querySelector('.option-btn:nth-child(2)');
const nonButton = document.querySelector('.option-btn:nth-child(3)');

ouiButton.addEventListener('click', function() {
    ouiButton.style.backgroundColor = reservationButton.style.backgroundColor;
    ouiButton.style.color = reservationButton.style.color;
});

nonButton.addEventListener('click', function() {
    nonButton.style.backgroundColor = reservationButton.style.backgroundColor;
    nonButton.style.color = reservationButton.style.color;
});
const confirmButton = document.querySelector('.confirm-btn');
const cancelButton = document.querySelector('.cancel-btn');

confirmButton.addEventListener('click', function() {
    confirmButton.style.backgroundColor = cancelButton.style.backgroundColor;
    confirmButton.style.color = cancelButton.style.color;
});

cancelButton.addEventListener('click', function() {
    cancelButton.style.backgroundColor = confirmButton.style.backgroundColor;
    cancelButton.style.color = confirmButton.style.color;
});