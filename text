// Selecting the buttons
const roundTripButton = document.querySelector('.round-trip');
const oneWayButton = document.querySelector('.one-way');

// Adding click event listeners
roundTripButton.addEventListener('click', function() {
    roundTripButton.style.backgroundColor = '#0e2a4e';
    roundTripButton.style.color = '#fff';
    oneWayButton.style.backgroundColor = '#fff';
    oneWayButton.style.color = '#0e2a4e';
});

oneWayButton.addEventListener('click', function() {
    oneWayButton.style.backgroundColor = '#0e2a4e';
    oneWayButton.style.color = '#fff';
    roundTripButton.style.backgroundColor = '#fff';
    roundTripButton.style.color = '#0e2a4e';
});
onst jourButton = document.querySelector('.date-part:nth-child(1)');

jourButton.addEventListener('click', function() {
    const userInput = prompt('Entrez un jour (1-31) :');
    // Validate userInput and handle accordingly
    // For simplicity, let's assume direct assignment to a placeholder element
    jourButton.textContent = userInput;
});
